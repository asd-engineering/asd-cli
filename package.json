{
  "name": "@asd-engineering/cli",
  "version": "2.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/asd-engineering/.asd.git"
  },
  "description": "ASD Framework - Accelerated Software Development CLI",
  "type": "module",
  "bin": {
    "asd": "./bin/asd.js"
  },
  "exports": {
    ".": "./src/cli.ts",
    "./api": "./src/api/index.ts"
  },
  "scripts": {
    "test": "bun test tests/ modules/core modules/network modules/http modules/publish modules/caddy modules/codeserver modules/ttyd modules/automation modules/tui-menu/tests modules/plugin",
    "test:unit": "bun test tests/*.test.ts tests/*.test.mjs modules/*/tests/*.test.mjs --ignore='**/asd-dashboard/**'",
    "test:integration": "bun bin/asd.ts test",
    "test:network": "bun test modules/network/tests/",
    "test:core": "bun test modules/core/tests/ tests/",
    "coverage": "bun test tests/ modules/core modules/network modules/http modules/publish modules/caddy modules/codeserver modules/ttyd modules/automation modules/tui-menu/tests modules/plugin --coverage",
    "coverage:summary": "bun run coverage 2>&1 | tail -80",
    "test:dashboard": "cd modules/asd-dashboard && npx playwright test",
    "test:infra": "playwright test --config=tests/playwright/playwright.config.ts",
    "test:infra:ui": "playwright test --config=tests/playwright/playwright.config.ts --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write src tests",
    "format-check": "prettier --check src tests",
    "cpd": "jscpd src modules --config .jscpd.json",
    "cpd:ci": "jscpd src modules --config .jscpd.json",
    "build": "bun build bin/asd.ts --target=bun --outfile=bin/asd.js",
    "build:exe": "just -f scripts/build.just build-exe"
  },
  "author": "ASD Engineering",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@accelerated-software-development/caddy-api-client": "^0.3.1",
    "@unblessed/blessed": "^1.0.0-alpha.23",
    "bcryptjs": "^3.0.3",
    "cli-table3": "^0.6.5",
    "comment-parser": "^1.4.1",
    "dotenv": "^17.2.3",
    "globby": "^14.1.0",
    "ink": "^5.1.0",
    "ink-select-input": "^6.0.0",
    "jsonpath-plus": "^10.3.0",
    "mri": "^1.2.0",
    "neo-blessed": "^0.2.0",
    "pino": "^10.1.0",
    "prompts": "^2.4.2",
    "react": "^18.3.1",
    "react-devtools-core": "^6.1.1",
    "reflect-metadata": "^0.2.2",
    "slice-ansi": "^7.1.2",
    "table": "^6.9.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "jscpd": "^4.0.5",
    "@playwright/test": "^1.55.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.27.0",
    "globals": "^17.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.32.0"
  }
}
